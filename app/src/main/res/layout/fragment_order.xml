<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_order_group"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:clickable="true"
        >

        <TextView
            android:id="@+id/textorder_client"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="訂購客戶："
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/textorder_client"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="8dp"
            android:text="訂購日期："
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/order_deliver_date"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/order_date"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="8dp"
            android:text="預計出貨："
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/order_address"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/order_deliver_date"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="8dp"
            android:text="送貨地址："
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/order_phone"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/edit_adress"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="8dp"
            android:text="客戶電話："
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/order_product"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/order_phone"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="8dp"
            android:text="訂購產品："
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />


        <AutoCompleteTextView
            android:id="@+id/edit_client"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/textorder_client"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_toRightOf="@id/textorder_client"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:hint="可直接輸入新增客戶"
            android:textSize="@dimen/text_size" />

        <AutoCompleteTextView
            android:id="@+id/edit_order_date_month"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="12月"
            android:layout_alignBottom="@+id/order_date"
            android:layout_toRightOf="@id/order_date"
            android:layout_marginRight="@dimen/fab_margin"
            android:paddingRight="@dimen/text_padding"
            android:paddingLeft="@dimen/text_padding"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:textSize="@dimen/text_size" />

        <AutoCompleteTextView
            android:id="@+id/edit_order_date"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="31日"
            android:layout_alignBottom="@+id/order_date"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_toRightOf="@id/edit_order_date_month"
            android:paddingRight="@dimen/text_padding"
            android:paddingLeft="@dimen/text_padding"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:textSize="@dimen/text_size" />

        <AutoCompleteTextView
            android:id="@+id/edit_deliver_date_month"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="12月"
            android:layout_alignBottom="@+id/order_deliver_date"
            android:layout_toRightOf="@id/order_deliver_date"
            android:layout_marginRight="@dimen/fab_margin"
            android:paddingRight="@dimen/text_padding"
            android:paddingLeft="@dimen/text_padding"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:textSize="@dimen/text_size" />

        <AutoCompleteTextView
            android:id="@+id/edit_deliver_date"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="31日"
            android:layout_alignBottom="@+id/order_deliver_date"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_toRightOf="@id/edit_deliver_date_month"
            android:paddingRight="@dimen/text_padding"
            android:paddingLeft="@dimen/text_padding"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:textSize="@dimen/text_size" />


        <EditText
            android:id="@+id/edit_adress"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@id/order_address"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:hint="輸入地址"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignBottom="@id/order_phone"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_toRightOf="@id/order_phone"
            android:background="@drawable/edit_background"
            android:gravity="center"
            android:hint="輸入電話"
            android:textSize="@dimen/text_size" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/order_group_insert_product"
            android:layout_below="@+id/order_product">
            <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/order_auto_textview_product_name"
                android:hint="產品名稱"
                android:textSize="@dimen/text_size"
                android:gravity="center"
                android:background="@drawable/edit_background"
                android:layout_weight="2"
                />
            <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/order_auto_textview_product_Specification"
                android:hint="規格"
                android:gravity="center"
                android:background="@drawable/edit_background"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/fab_margin"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/order_auto_textview_product_amount"
                android:hint="數量"
                android:textSize="@dimen/text_size"
                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/edit_background"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                />
            <Button
                android:id="@+id/order_button_add_product"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="+"
                android:textColor="@color/white"
                android:background="@drawable/button_background_selector"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/order_group_insert_product"
            android:layout_margin="@dimen/fab_margin">

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>
</ScrollView>